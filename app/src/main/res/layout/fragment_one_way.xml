<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/_6sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pickup_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bg"
                        android:drawableRight="@drawable/drop_down"
                        android:hint="Select Pickup Location"
                        android:padding="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/layout_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/iv_pickup_edit"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_2sdp"
                                android:text="Pickup Address" />


                            <ImageView
                                android:id="@+id/iv_pickup_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/iv_pickup_address"
                                android:padding="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:src="@drawable/edit" />

                            <ImageView
                                android:id="@+id/iv_pickup_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_4sdp"
                                android:visibility="visible"
                                android:src="@drawable/add_address"
                                android:tint="@color/colorBlack" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_pickup_address1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:padding="@dimen/_2sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="@color/colorGrey" />

                        <TextView
                            android:id="@+id/tv_pickup_address2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:padding="@dimen/_2sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="@color/colorGrey" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_drop_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/layout_bg"
                        android:drawableRight="@drawable/drop_down"
                        android:hint="Select Drop Location"
                        android:padding="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/layout_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/iv_drop_edit"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_2sdp"
                                android:text="Drop Address" />


                            <ImageView
                                android:id="@+id/iv_drop_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/iv_drop_address"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/edit" />

                            <ImageView
                                android:id="@+id/iv_drop_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_4sdp"
                                android:visibility="visible"
                                android:src="@drawable/add_address" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_drop_address1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:padding="@dimen/_2sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="@color/colorGrey" />

                        <TextView
                            android:id="@+id/tv_drop_address2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:padding="@dimen/_2sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="@color/colorGrey" />

                        <!--  <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="@dimen/_30sdp"
                              android:padding="@dimen/_6sdp" />

                          <View
                              android:layout_width="match_parent"
                              android:layout_height="0.3dp"
                              android:layout_marginRight="@dimen/_30sdp"
                              android:background="@color/colorGrey" />-->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/layout_bg"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_38sdp"
            android:paddingRight="@dimen/_38sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>